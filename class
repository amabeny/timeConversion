
public class TimeConversion {
    
    /**
     * Constructor
     */
    TimeConversion(){

    }

    void showDecaseconds(int numSeconds){
        // 1sec / 10 = .10
       double decaseconds = numSeconds * .10;
       System.out.print("A Decasecond is equal to 10 seconds, The conversion from ");
       System.out.println( numSeconds + " seconds to decaseconds is = " + decaseconds);
    }

    void showJiffies(int numSeconds){
        // 1 sec * 60 = 60
        int jiffy = numSeconds * 60;
        System.out.print("A Jiffy is equal to 10 miliseconds, The conversion from ");
        System.out.println( numSeconds + " seconds to jiffies is = " + jiffy);
    }


    void showNewYorkMinutes(int numSeconds){
        // 1/20th of sec = .05
        double newYorkMinutes = numSeconds * .05;
        System.out.print("A New York Minute is equal to 1/20 of a second, The conversion from ");
        System.out.println( numSeconds + " seconds to New York Minutes is = " + newYorkMinutes);
    }

    void showNanoCenturies(int numSeconds){
        // 1 sec / 3.156 
        double nanoCenturies = numSeconds / 3.156;
        System.out.print("A Nanocentury is equal to 3.156 seconds, The conversion from ");
        System.out.println( numSeconds + " seconds to Nanocentury is = " + nanoCenturies);
    }

    void showScaramuccis(int numSeconds){
        // 11 days = (11 * 86400 = 950,400
        double Scaramuccis = (double)numSeconds / 950400;
        System.out.print("A Scaramucci is equal to 11 days, The conversion from ");
        System.out.println( numSeconds + " seconds to a Scaramucci is = " + Scaramuccis);
    }




    
}//end class
